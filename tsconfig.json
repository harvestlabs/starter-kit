{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/helpers/utils/*"],
      "@styles/*": ["src/pages/styles/*"],
      "@gql/*": ["src/graphql/*"],
      "@gqlt/*": ["src/graphql/__generated__/*"],
      "@components/*": ["src/pages/components/*"],
      "@layouts/*": ["src/pages/layouts/*"],
      "@redux/*": ["src/redux/*"],
      "@imgs/*": ["public/imgs/*"],
      "@hooks/*": ["src/helpers/hooks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
